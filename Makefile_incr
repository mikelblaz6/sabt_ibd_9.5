export GCC_DIR=/MRT_OS/gcc-linaro-toolchain/bin/

export BUILD_DIR=/MRT_OS/402.12/BUILD/
export DEPLOY_DIR=/MRT_OS/402.12/DEPLOY/
export INSTALL_DIR=/MRT_OS/402.12/SYSTEM_INCR/
export ROOTFS_DIR=/MRT_OS/402.12/SYSTEM_IMAGE/

${BUILD_DIR}:
	mkdir -p ${BUILD_DIR}

${DEPLOY_DIR}:
	mkdir -p ${DEPLOY_DIR}	
	
${INSTALL_DIR}:
	mkdir -p ${INSTALL_DIR}
	
${ROOTFS_DIR}:
	mkdir -p ${ROOTFS_DIR}

PHONY: rootfs_install-incr
rootfs_install-incr: ${DEPLOY_DIR}/rootfs/boot/uEnv.txt \
	| ${INSTALL_DIR}
	$(MAKE) -C ${BUILD_DIR}/rootfs -f mrt/makefile.final install-incr

PHONY: incr_release
incr_release: rootfs_install-incr
